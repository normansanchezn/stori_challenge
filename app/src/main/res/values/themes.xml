<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoriChallenge" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/stori_primary_light</item>
        <item name="colorPrimaryDark">@color/stori_primary</item>

    </style>

    <style name="Theme.StoriChallenge" parent="Base.Theme.StoriChallenge" />

    <style name="DialogTheme" parent="Base.Theme.StoriChallenge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Stori.Title.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Stori.Body.Medium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Stori.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">@dimen/no_inset</item>
        <item name="android:insetBottom">@dimen/no_inset</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/height_button_default</item>
        <item name="android:textColor">@color/stori_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextAppearance.Stori.Widget.Button.Primary" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/selector_button_primary_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="lineHeight">19dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Stori.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:backgroundTint">@drawable/button_primary_background</item>
        <item name="android:textAppearance">@style/TextAppearance.Stori.Widget.Button.Primary</item>
    </style>

    <style name="TextAppearance.Stori.Title.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textColor">@color/gray_75</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Stori.Title.Small.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayout.Stori.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray_75</item>
        <item name="hintTextAppearance">@style/TextAppearance.Stori.HintText</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Stori.HelperText</item>
        <item name="errorTextAppearance">@style/TextAppearance.Stori.Error</item>
        <item name="boxStrokeColor">@color/selector_outlined_box_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="TextAppearance.Stori.Error" parent="TextAppearance.Stori.HelperText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextAppearance.Stori.HintText" parent="TextAppearance.Stori.Label.Small">
        <item name="android:textColor">@color/gray_75</item>
    </style>

    <style name="TextAppearance.Stori.HelperText" parent="TextAppearance.Stori.Label.Small">
        <item name="android:textColor">@color/gray_75</item>
    </style>

    <style name="TextAppearance.Stori.Label.Small" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">13dp</item>
        <item name="android:textColor">@color/gray_75</item>
    </style>

    <style name="TextAppearance.Stori.Widget.EditText" parent="Base.Theme.StoriChallenge">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/gray_75</item>
        <item name="hintTextAppearance">@style/TextAppearance.Stori.Widget.EditText.Hint</item>
    </style>

    <style name="TextAppearance.Stori.Widget.EditText.Hint" parent="Base.Theme.StoriChallenge">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Stori.EditText.CustomView" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/transparent_stori</item>
        <item name="android:cursorVisible">false</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAppearance">@style/TextAppearance.Stori.Title.Large</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Stori.Body.Small" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>